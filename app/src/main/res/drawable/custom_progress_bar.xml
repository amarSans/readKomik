<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <corners android:radius="20dp" />
            <stroke android:width="1dp" android:color="#D1D1D1" />
        </shape>
    </item>

    <item android:id="@android:id/background" android:top="2dp" android:bottom="2dp" android:left="2dp" android:right="2dp">
        <shape>
            <corners android:radius="20dp" />
            <solid android:color="#F8F9FA" />
        </shape>
    </item>

    <item android:id="@android:id/progress" android:top="2dp" android:bottom="2dp" android:left="2dp" android:right="2dp">
        <clip>
            <shape>
                <corners android:radius="20dp" />
                <solid android:color="#4343BD" />
            </shape>
        </clip>
    </item>
</layer-list>
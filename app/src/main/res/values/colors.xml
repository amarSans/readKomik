<resources>
    <!-- ================= LIGHT THEME ================= -->

    <!-- Warna utama aplikasi (misal: tombol, header) -->
    <color name="light_primary">#00ADB5</color>
    <!-- Warna teks/ikon di atas warna primary -->
    <color name="light_onPrimary">#EEEEEE</color> <!-- Menggunakan putih agar kontras -->

    <!-- Warna sekunder (misal: floating action button, slider) -->
    <color name="light_secondary">#393E46</color>
    <!-- Warna teks/ikon di atas warna secondary -->
    <color name="light_onSecondary">#EEEEEE</color>

    <!-- Warna latar belakang utama aplikasi -->
    <color name="light_background">#EEEEEE</color>
    <!-- Warna teks/konten di atas warna background -->
    <color name="light_onBackground">#222831</color>

    <!-- Warna untuk komponen seperti Card, BottomSheet -->
    <color name="light_surface">#EEEEEE</color>
    <!-- Warna teks/konten di atas warna surface -->
    <color name="light_onSurface">#222831</color>


    <!-- ================= DARK THEME ================= -->

    <!-- Warna utama aplikasi (bisa tetap sama atau sedikit lebih lembut) -->
    <color name="dark_primary">#00ADB5</color>
    <!-- Warna teks/ikon di atas warna primary -->
    <color name="dark_onPrimary">#222831</color>

    <!-- Warna sekunder -->
    <color name="dark_secondary">#393E46</color>
    <color name="dark_onSecondary">#EEEEEE</color>

    <color name="dark_background">#222831</color>
    <color name="dark_onBackground">#EEEEEE</color>

    <color name="dark_surface">#393E46</color>
